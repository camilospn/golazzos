<div class="container">
  <div class="row">
    <div class="span8 offset2">

<%- model_class = Partido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:local) %>:</strong></dt>
  <dd><%= @partido.local %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visitante) %>:</strong></dt>
  <dd><%= @partido.visitante %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logolocal) %>:</strong></dt>
  <dd><%= @partido.logolocal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:logovisitante) %>:</strong></dt>
  <dd><%= @partido.logovisitante %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diapartido) %>:</strong></dt>
  <dd><%= @partido.diapartido %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              partidos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_partido_path(@partido), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              partido_path(@partido),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<div><strong>monto total:<%=@partido.monto_total_apostado%></strong></div>
<table>
  <tbody>
      <%for i in 0..6 %>
      <tr>
          <% for j in 0..6%>
            <td>
                <%= form_for([@partido, @partido.bets.build]) do |f| %>
                <%= f.hidden_field :monto, value: 10000%>
                <%= f.hidden_field :golesLocal, value: i%>

                <%= f.hidden_field :golesVisitante, value: j%>
                <%= f.hidden_field :user_id, value: current_user.id%>
                <%= f.submit "#{i} - #{j} (x#{@partido.xveces_el_resultado(i,j).round(1)})"%>
                <% end %>

            </td>
          <%end%> 
      </tr>
      <%end%>
  </tbody>
</table> 
  <%for i in 0..6 %>
  <% for j in 0..6%>
      <%if @partido.monto_apostado_en_el_resultado(i,j)!= 0%>
      <div>Resultado <%= i%> - <%= j%>: <%=@partido.monto_apostado_en_el_resultado(i,j)%>  -  <%=@partido.porcentaje_en_el_resultado(i,j).round(3)%>  -  <%= @partido.xveces_el_resultado(i,j).round(3)%> </div>
      <%end%>
  <%end%> 
  <%end%>
   
   </div>
  </div>
</div>