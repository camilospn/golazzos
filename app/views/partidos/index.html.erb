<div class="container">
  <div class="row">
    <div class="span8 offset2">

      <%- model_class = Partido -%>
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
      </div>
      <table class="table table-hover">

        <tbody>
          <% @partidos.each do |partido| %>
            <tr>
              <td><%= image_tag partido.logolocal, {:class => "", :width=>"50"}%></td>
              <td><%= partido.local %></td>
              <td><%= partido.visitante %></td>
              <td><%= image_tag partido.logovisitante, {:class => "", :width=>"50"}%></td>
              <td>
                <%= link_to "Apostar", partido_path(partido), {:class=>"btn-mini btn"} %>
                <%= link_to t('edit', :default => t("helpers.links.edit")),
                            edit_partido_path(partido), :class => 'btn btn-mini' %>
                <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                            partido_path(partido),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_partido_path,
                  :class => 'btn btn-primary' %>

    </div>
  </div>
</div>