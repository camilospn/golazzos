          <div class="span2">
            <%if (@partido.xveces_el_resultado(i,j,current_user.pezzos_que_apuesta) >= 2 || @partido.monto_total_apostado < 500000) && @partido.cerrado==false %>
                            <%=form_for current_user, url: {action: 'update', controller: 'users', partido_actual_id: @partido.id}, remote: true  do |f|%>
                                  <%= f.hidden_field :local_apostado, value: i%>
                                  <%= f.hidden_field :visitante_apostado, value: j%>
                                      <% if (current_user.local_apostado==i && current_user.visitante_apostado== j)%>
                                          <button data-loading-text="Loading..." class= "btn btn-block btn-mini disabled btn-primary" >   
                                          <h2><%= "#{i} - #{j}"%></h2>
                                          <h2 class="lead"><%="#{@partido.xveces_el_resultado(i,j,current_user.pezzos_que_apuesta).round(3)}x"%></h2> 
